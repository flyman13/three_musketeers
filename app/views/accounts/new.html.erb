<div class="accounts-new__panel">
  <h2>Реєстрація мушкетера</h2>

  <%= form_with model: @account, local: true do |f| %>
    <div class="form-row">
      <%= f.label :username, "Нікнейм" %><br>
      <%= f.text_field :username, class: "full-width" %>
    </div>
    <div class="form-row">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: "full-width" %>
    </div>
    <div class="form-row">
      <%= f.label :password, "Пароль" %><br>
      <%= f.password_field :password, class: "full-width" %>
    </div>
    <div class="form-row form-row--large">
      <%= f.label :password_confirmation, "Підтвердження пароля" %><br>
      <%= f.password_field :password_confirmation, class: "full-width" %>
    </div>

    <%= link_to "Створити аккаунт", new_account_path, class: "btn btn-success", style: "background-color: #198754 !important; border-color: #198754 !important; color: white !important;" %>
  <% end %>
  <div class="mt-4">
    <%= link_to "Назад до стрічки", root_path, class: "btn btn-secondary" %>
  </div>
  <p class="mt-3"><%= link_to "Вже маєте аккаунт?", login_path, class: "text-decoration-none" %></p>
</div>