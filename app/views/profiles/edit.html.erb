<style>
  .profiles__panel {
    display: flex;
    justify-content: center;
    align-items: top;
    min-height: 100vh;
    padding: 20px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
  }

  .profiles__container {
    width: 100%;
    max-width: 500px;
    display: flex;
    gap: 30px;
  }

  .profiles__logo {
    text-align: center;
    margin-bottom: 40px;
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
  }

  .profiles__logo img {
    width: 100px;
    height: 100px;
    object-fit: cover;
  }

  .profiles__panel h2 {
    display: none;
  }

  .profiles__panel form::before {
    content: "–†–µ–¥–∞–≥—É–≤–∞–Ω–Ω—è –ø—Ä–æ—Ñ—ñ–ª—é";
    display: block;
    text-align: center;
    font-size: 28px;
    font-weight: 300;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #efefef;
    color: #000;
    margin: -40px -44px 30px -44px;
    padding: 0 44px 20px 44px;
  }

  .avatar-section {
    flex-shrink: 0;
    padding-top: 60px;
  }

  .avatar-preview {
    text-align: center;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .avatar-preview:hover {
    transform: scale(1.05);
  }

  .avatar-preview img,
  .avatar-preview .placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #dbdbdb;
    margin-bottom: 10px;
    transition: border-color 0.2s ease;
  }

  .avatar-preview:hover img,
  .avatar-preview:hover .placeholder {
    border-color: #0095f6;
  }

  .avatar-preview .placeholder {
    background-color: #f0f0f0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 48px;
  }

  .avatar-hint {
    font-size: 12px;
    color: #999;
    text-align: center;
    margin-top: 5px;
  }

  .form-section {
    flex: 1;
    padding-top: 60px;
  }

  .form-row {
    position: relative;
    margin-bottom: 10px;
  }

  .form-row label {
    position: absolute;
    left: 10px;
    top: 12px;
    color: gray;
    transition: 0.2s ease;
    pointer-events: none;
    padding: 0 4px;
  }

  .form-row input,
  .form-row textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 12px 16px;
    background-color: #fafafa;
    border: 1px solid #dbdbdb;
    border-radius: 16px;
    font: 16px;
    color: #262626;
    outline: none;
    transition: border-color 0.2s;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    min-height: 50px;
  }

  .form-row textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-row input::placeholder,
  .form-row textarea::placeholder {
    color: #a6a6a6;
  }

  .form-row input:focus + label,
  .form-row input:not(:placeholder-shown) + label,
  .form-row textarea:focus + label,
  .form-row textarea:not(:placeholder-shown) + label {
    top: -10px;
    font: 12px;
    background-color: #fafafa;
    border-color: #717171;
  }

  .file-upload-row {
    display: none;
  }

  .btn-block {
    display: block;
    width: 100%;
    margin-top: 10px;
    padding: 12px 0;
    background-color: #0095f6;
    border: none;
    border-radius: 50px;
    color: white;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    transition: background-color 0.2s;
    text-align: center;
    text-decoration: none;
    box-sizing: border-box;
    min-height: 44px;
  }

  .btn-block:hover {
    background-color: #0081d4;
  }

  .btn-block:active {
    background-color: #0075ba;
  }

  .btn-cancel {
    display: block;
    width: 100%;
    margin-top: 10px;
    padding: 12px 0;
    background-color: transparent;
    border: 1px solid #0095f6;
    border-radius: 50px;
    color: #0095f6;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    transition: all 0.2s;
    text-align: center;
    text-decoration: none;
    box-sizing: border-box;
    min-height: 44px;
  }

  .btn-cancel:hover {
    background-color: #0095f6;
    color: white;
  }

  @media (max-width: 600px) {
    .profiles__container {
      flex-direction: column;
      gap: 20px;
      max-width: 350px;
    }
    
    .avatar-section,
    .form-section {
      padding-top: 0;
    }
    
    .profiles__logo {
      position: relative;
      top: auto;
      left: auto;
      transform: none;
      margin-bottom: 20px;
    }
  }

</style>

<div class="profiles__panel">
  <div class="profiles__container">
    <div class="avatar-section">
      <div class="avatar-preview" onclick="document.getElementById('account_avatar').click()">
        <div id="avatar-display">
          <% if @account.avatar.attached? %>
            <%= image_tag @account.avatar, alt: "Current avatar", style: "width: 120px; height: 120px; object-fit: cover;" %>
          <% else %>
            <div class="placeholder">üë§</div>
          <% end %>
        </div>
        <div class="avatar-hint">Click to change</div>
      </div>
    </div>

    <div class="form-section">
      <%= form_with model: @account, url: profile_path, method: :patch, local: true do |f| %>
        <div class="file-upload-row">
          <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', onchange: "previewAvatar(this)", id: "account_avatar" %>
        </div>

        <div class="form-row">
          <%= f.text_field :username, class: "full-width", placeholder: "", value: @account.username %>
          <%= f.label :username, "Username" %>
        </div>

        <div class="form-row">
          <%= f.text_area :description, rows: 3, class: "full-width", placeholder: "", value: @account.description %>
          <%= f.label :description, "Bio" %>
        </div>

        <%= f.submit "Update Profile", class: "btn-block" %>
        <%= link_to "Cancel", account_path(current_account), class: "btn-cancel" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  function previewAvatar(input) {
    const avatarDisplay = document.getElementById('avatar-display');
    
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      
      reader.onload = function(e) {
        avatarDisplay.innerHTML = `<img src="${e.target.result}" alt="Avatar preview">`;
      }
      
      reader.readAsDataURL(input.files[0]);
    } else {
      // Reset to current avatar or placeholder
      <% if @account.avatar.attached? %>
        avatarDisplay.innerHTML = `<%= image_tag @account.avatar, alt: "Current avatar", style: "width: 120px; height: 120px; object-fit: cover;" %>`;
      <% else %>
        avatarDisplay.innerHTML = '<div class="placeholder">üë§</div>';
      <% end %>
    }
  }
</script>