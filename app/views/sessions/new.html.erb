<div class="sessions__panel">
  <h2>Вхід для мушкетерів</h2>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-row">
      <%= f.label :email %><br>
      <%= f.email_field :email, required: true, class: "full-width" %>
    </div>

    <div class="form-row">
      <%= f.label :password, "Пароль" %><br>
      <%= f.password_field :password, required: true, class: "full-width" %>
    </div>

    <%= f.submit "Увійти", class: "btn btn-primary btn-block" %>
    <div class="mt-3">
      <%= link_to "Створити аккаунт", new_account_path, class: "btn btn-secondary" %>
    </div>

  <% end %>
</div>