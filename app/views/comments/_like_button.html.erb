<div id="like_comment_<%= comment.id %>"
     class="comment-actions d-flex align-items-center gap-2 mt-1"
     data-controller="like"
     data-like-post-id-value="<%= post.id %>"
     data-like-create-url-value="<%= like_post_comment_path(post, comment) %>"
     data-like-destroy-url-value="<%= unlike_post_comment_path(post, comment) %>"
     data-like-liked-value="<%= comment.comment_reactions.exists?(account: current_account) ? 'true' : 'false' %>">
  <% if current_account %>
    <button type="button" data-action="click->like#toggle" data-like-target="button" class="btn-comment-like btn btn-link p-0">
      <% if comment.comment_reactions.exists?(account: current_account) %>
        <i data-like-target="icon" class="bi bi-heart-fill text-danger small"></i>
      <% else %>
        <i data-like-target="icon" class="bi bi-heart text-muted small"></i>
      <% end %>
    </button>
  <% end %>
  <span data-like-target="count" class="text-muted small"><%= comment.comment_reactions.count %></span>
</div>