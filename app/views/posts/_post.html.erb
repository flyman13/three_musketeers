<div id="<%= dom_id post %>">
  <div>
    <% if post.image.attached? %>
      <%= image_tag post.image, alt: "Post image" %>
    <% end %>
  </div>

  <div>
    <strong><%= link_to post.account.username, account_path(post.account) %></strong>
    <%= post.body %>
  </div>

  <div>
    <%= render "posts/post_actions", post: post %>
  </div>

</div>
