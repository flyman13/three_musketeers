<%# Main profile container using Bootstrap grid %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      
      <%# Profile Header section: Avatar, Username, and Actions %>
      <div class="profile-header-top d-flex align-items-center mb-5">
        
        <%# Profile Avatar - Displays uploaded avatar or a gray placeholder %>
        <div class="profile-avatar-container me-5">
          <% if @account.avatar.attached? %>
            <%= image_tag @account.avatar, class: "rounded-circle profile-avatar-img" %>
          <% else %>
            <div class="rounded-circle profile-avatar-placeholder"></div>
          <% end %>
        </div>

        <%# Profile Info and Buttons %>
        <div class="profile-title-actions">
          <div class="d-flex align-items-center gap-3 mb-3">
            <h2 class="fw-light m-0 text-dark"><%= @account.username %></h2>
            
            <%# Action Buttons: Show Edit for owner, Follow for others %>
            <div class="profile-buttons">
              <% if current_account == @account %>
                <%# Edit link for the profile owner %>
                <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-outline-secondary btn-sm fw-bold px-3" %>
              <% else %>
                <%# Follow/Unfollow toggle logic %>
                <% if current_account.following?(@account) %>
                  <% rel = current_account.following_relationships.find_by(followed_id: @account.id) %>
                  <%= button_to "Unfollow", relationship_path(rel), method: :delete, class: "btn btn-outline-secondary btn-sm fw-bold px-4" %>
                <% else %>
                  <%= button_to "Follow", relationships_path(followed_id: @account.id), method: :post, class: "btn btn-primary btn-sm fw-bold px-4" %>
                <% end %>
              <% end %>
            </div>
          </div>
          
          <%# User Biography / Description %>
          <% if @account.description.present? %>
            <p class="profile-description mt-2 text-dark">
              <%= @account.description %>
            </p>
          <% end %>
        </div>

        <%# Profile stats using corrected associations %>
        <div class="profile-stats d-flex gap-4 mb-3">
          <div class="stat-item">
            <span class="fw-bold"><%= @account.posts.count %></span> posts
          </div>
          
          <div class="stat-item">
            <%= link_to followers_account_path(@account), class: "text-decoration-none text-dark" do %>
              <span class="fw-bold"><%= @account.followers.count %></span> followers
            <% end %>
          </div>
          
          <div class="stat-item">
            <%= link_to following_account_path(@account), class: "text-decoration-none text-dark" do %>
              <span class="fw-bold"><%= @account.following.count %></span> following
            <% end %>
          </div>
        </div>
      </div>

      <hr class="mb-5">

      <%# Detailed Posts Stream %>
      <div class="profile-stream">
        <% @posts.each do |post| %>
          <div class="card mb-4 border-1 shadow-sm">
            
            <%# Post Media %>
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "card-img-top img-fluid" %>
            <% end %>

            <div class="card-body">
              <%# Likes counter using Reactions association %>
              <div class="post-actions-section mb-2">
                <span class="fw-bold text-dark">
                  <i class="bi bi-heart-fill text-danger"></i> 
                  <%= post.reactions.count %> likes
                </span>
              </div>

              <%# Post Content: Username and Body %>
              <p class="card-text">
                <span class="fw-bold me-2"><%= post.account.username %></span>
                <%= post.body %>
              </p>

              <hr>

              <%# Comments section %>
              <div class="post-comments-section mb-3">
                <h6 class="text-muted small mb-2">Comments:</h6>
                <% post.comments.each do |comment| %>
                  <div class="d-flex gap-2 mb-1 small">
                    <%# Link to the commenter's profile %>
                    <div class="d-flex gap-2 mb-1 small">
                      <%= link_to comment.account.username, account_path(comment.account), class: "fw-bold text-dark text-decoration-none" %>:
                      <span class="text-secondary"><%= comment.body %></span>
                    </div>
                    <span class="text-secondary"><%= comment.body %></span>
                  </div>
                <% end %>
              </div>

              <%# Post Management: Delete button (only for owners) %>
              <% if current_account == post.account %>
                <div class="post-management-section">
                  <%= button_to post_path(post), 
                                  method: :delete, 
                                  data: { confirm: "Are you sure you want to delete this post?" }, 
                                  class: "btn btn-outline-danger btn-sm w-100 fw-bold" do %>
                    Delete Post
                  <% end %>
                </div>
              <% end %>

            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>