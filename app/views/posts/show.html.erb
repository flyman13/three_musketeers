    height: 100%;
    object-fit: cover;
    display: block;
  }

  .no-image-placeholder {
    color: #999;
    font-size: 16px;
  }

  .post-show-info-section {
    display: flex;
    flex-direction: column;
    border-left: 1px solid #dbdbdb;
  }

  .post-show-header-info {
    padding: 16px;
    border-bottom: 1px solid #efefef;
  }

  .post-user-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .post-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

