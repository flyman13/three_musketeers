    font-size: 18px;
  }

  .post-user-details {
    display: flex;
    flex-direction: column;
  }

  .username-link {
    font-weight: 600;
    color: #000;
    text-decoration: none;
    font-size: 14px;
  }

  .username-link:hover {
    color: #999;
  }

  .post-time {
    font-size: 12px;
    color: #999;
  }

  .post-caption {
    padding: 16px;
    border-bottom: 1px solid #efefef;
  }

  .caption-text {
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }

  .caption-username {
    color: #000;
    text-decoration: none;
    font-weight: 600;
  }

  .caption-username:hover {
    text-decoration: underline;
  }

  .comments-section {
    flex: 1;
    overflow-y: auto;
    border-bottom: 1px solid #efefef;
  }

  .comments-title {
    padding: 16px;
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    border-bottom: 1px solid #efefef;
    color: #000;
  }

  .comments-list {
    padding: 16px;
  }

  .no-comments {
    color: #999;
    text-align: center;
    font-size: 13px;
    margin: 20px 0;
  }

  .post-actions-section {
    padding: 12px 16px;
    border-bottom: 1px solid #efefef;
    display: flex;
    gap: 16px;
  }

  .comment-input-wrapper {
    padding: 12px 16px;
  }

  .comment-form {
    display: flex;
    gap: 8px;
  }

  .comment-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 14px;
    background: transparent;
    padding: 8px 0;
    border-bottom: 1px solid #efefef;
  }

  .comment-input::placeholder {
    color: #999;
  }

  .comment-submit-btn {
    background: none;
    border: none;
    color: #0095f6;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    padding: 8px 0;
    transition: all 0.2s ease;
  }

  .comment-submit-btn:hover {
    color: #1877f2;
  }

  @media (max-width: 900px) {
    .post-show-container {
      grid-template-columns: 1fr;
    }

    .post-show-info-section {
      border-left: none;
      border-top: 1px solid #dbdbdb;
    }

    .post-show-image-section {
      min-height: 400px;
    }
  }

  @media (max-width: 640px) {
    .post-show-image-section {
      min-height: 300px;
    }

    .post-show-header-content {
      padding: 12px 15px;
    }

    .post-show-title {
      font-size: 20px;
    }
  }
</style>