<div class="post-show-wrapper">
  <!-- Header -->
  <header class="post-show-header">
    <div class="post-show-header-content">
      <div class="back-button">
        <%= link_to "←", account_path(@post.account), class: "back-link" %>
      </div>
      <h1 class="post-show-title">Допис</h1>
      <div class="header-spacer"></div>
    </div>
  </header>

  <!-- Post Content -->
  <div class="post-show-content">
    <div class="post-show-container">
      <!-- Post Image -->
      <div class="post-show-image-section">
        <% if @post.image.attached? %>
          <%= image_tag @post.image, class: "post-show-image" %>
        <% else %>
          <div class="no-image-placeholder">Немає зображення</div>
        <% end %>
      </div>

      <!-- Post Info -->
      <div class="post-show-info-section">
        <!-- Post Header -->
        <div class="post-show-header-info">
          <div class="post-user-info">
            <div class="post-avatar">
              <% if @post.account.avatar.attached? %>
                <%= image_tag @post.account.avatar, class: "avatar-image", alt: @post.account.username %>
              <% else %>
                <span class="avatar-placeholder"><%= @post.account.username.first.upcase %></span>
              <% end %>
            </div>
            <div class="post-user-details">
              <%= link_to @post.account.username, account_path(@post.account), class: "username-link" %>
              <span class="post-time"><%= time_ago_in_words(@post.created_at) %> ago</span>
            </div>
          </div>
        </div>

        <!-- Post Caption -->
        <div class="post-caption">
          <p class="caption-text">
            <strong><%= link_to @post.account.username, account_path(@post.account), class: "caption-username" %></strong>
            <%= @post.body %>
          </p>
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
          <h3 class="comments-title">Коментарі</h3>
          <div class="comments-list">
            <% if @post.comments.any? %>
              <% @post.comments.each do |comment| %>
                <%= render "comments/comment", comment: comment %>
              <% end %>
            <% else %>
              <p class="no-comments">Немає коментарів. Будьте першим!</p>
            <% end %>
          </div>
        </div>

        <!-- Post Actions -->
        <div class="post-actions-section">
          <%= render "posts/post_actions", post: @post %>
        </div>

        <!-- Comment Input -->
        <% if current_account %>
          <div class="comment-input-wrapper">
            <%= form_with model: [@post, Comment.new], local: true, class: "comment-form", id: "comment-form-#{@post.id}" do |f| %>
              <%= f.text_field :body, placeholder: "Додайте коментар...", class: "comment-input", id: "comment-input-#{@post.id}" %>
              <%= f.submit "Відправити", class: "comment-submit-btn", id: "comment-submit-#{@post.id}" %>
            <% end %>
          </div>
        <% end %>

        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const commentForm = document.getElementById('comment-form-<%= @post.id %>');
            const commentInput = document.getElementById('comment-input-<%= @post.id %>');
            const submitBtn = document.getElementById('comment-submit-<%= @post.id %>');

            if (commentForm && commentInput && submitBtn) {
              commentForm.addEventListener('submit', function(e) {
                if (!commentInput.value.trim()) {
                  e.preventDefault();
                  return false;
                }
              });
            }
          });
        </script>
      </div>
    </div>
  </div>
</div>

<style>
